<config>
    <modules>
        <Bullmkt_Conversao>
            <version>0.1.0</version>
        </Bullmkt_Conversao>
    </modules>
    <frontend>
        <layout>
            <updates>
                <bullconversao>
                    <file>bullconversao.xml</file>
                </bullconversao>
            </updates>
        </layout>
    </frontend>
    <global>
		<helpers>
            <bullconversao>
                <class>Bullmkt_Conversao_Helper</class>
            </bullconversao>
		</helpers>
        <blocks>
            <bullconversao>
                <class>Bullmkt_Conversao_Block</class>
            </bullconversao>
        </blocks>
    </global>
    <default>
        <google>
            <bullconversao>
                <active>1</active>
				<google_conversion_color>ffffff</google_conversion_color>
				<google_conversion_value>0</google_conversion_value>
				<google_remarketing_only>0</google_remarketing_only>
			</bullconversao>
        </google>
    </default>
</config>
