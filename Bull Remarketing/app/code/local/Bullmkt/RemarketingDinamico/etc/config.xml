<config>
    <modules>
        <Bullmkt_RemarketingDinamico>
            <version>0.1.0</version>
        </Bullmkt_RemarketingDinamico>
    </modules>
    <frontend>
        <layout>
            <updates>
                <bullremarketing>
                    <file>bullremarketing.xml</file>
                </bullremarketing>
            </updates>
        </layout>
    </frontend>
    <global>
	<helpers>
            <bullremarketing>
                <class>Bullmkt_RemarketingDinamico_Helper</class>
            </bullremarketing>
	</helpers>
        <blocks>
            <bullremarketing>
                <class>Bullmkt_RemarketingDinamico_Block</class>
            </bullremarketing>
        </blocks>
        <models>
            <bullremarketing>
                <class>Bullmkt_RemarketingDinamico_Model</class>
            </bullremarketing>
        </models>
    </global>
    <default>
        <google>
            <bullremarketing>
                <active>1</active>
                <use_to_id>2</use_to_id>
                <google_remarketing_only>1</google_remarketing_only>
            </bullremarketing>
        </google>
    </default>
</config>
