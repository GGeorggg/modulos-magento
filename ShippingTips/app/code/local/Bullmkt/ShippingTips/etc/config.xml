<config>
    <modules>
        <Bullmkt_ShippingTips>
            <version>0.1.0</version>
        </Bullmkt_ShippingTips>
    </modules>
    
    <global>
	<helpers>
            <shippingtips>
                <class>Bullmkt_ShippingTips_Helper</class>
            </shippingtips>
	</helpers>
        <blocks>
            <shippingtips>
                <class>Bullmkt_ShippingTips_Block</class>
            </shippingtips>
        </blocks>
        <models>
            <shippingtips>
                <class>Bullmkt_ShippingTips_Model</class>
            </shippingtips>
        </models>
    </global>
    
    <frontend>
        <layout>
            <updates>
                <shippingtips>
                    <file>shippingtips.xml</file>
                </shippingtips>
            </updates>
        </layout>
    </frontend>
    
    <default>
        <bullmkt>
            <shippingtips>
                <active>1</active>
                <minimum_value>100</minimum_value>
                <increase_range_product_price>30</increase_range_product_price>
            </shippingtips>
        </bullmkt>
    </default>
</config>
