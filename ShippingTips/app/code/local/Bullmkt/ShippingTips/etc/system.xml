<config>
    <sections>
        <bullmkt>
            <groups>
                <shippingtips>
                    <label>Bull Shipping Tips</label>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        
                        <minimum_value translate="label">
                            <label>Minimum Value Before Free Shipping</label>
                            <comment><![CDATA[Ex: <b>100</b> <em>for $100,00</em>]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </minimum_value>
                        
                        <increase_range_product_price  translate="label">
                            <label>Increase the Range Product Price</label>
                            <comment><![CDATA[Ex: <b>100</b> <em>for $100,00</em>]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </increase_range_product_price>
                        
                        <products_limit  translate="label">
                            <label>Products Limit</label>
                            <comment><![CDATA[leave in blank for haven't limit]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </products_limit>
                        
                    </fields>
                </shippingtips>
            </groups>
        </bullmkt>
    </sections>
</config>